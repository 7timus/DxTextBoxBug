<div class="alert alert-secondary mt-4" role="alert">
    <span class="oi oi-pencil mr-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Please take our
        <a target="_blank" class="font-weight-bold" href="https://go.microsoft.com/fwlink/?linkid=2137916">brief survey</a>
    </span>
    and tell us what you think.
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine("__SURVEY:OnInit");
        base.OnInitialized();
    }


    protected override void OnAfterRender(bool firstRender)
    {
        // should not be called as promt kicks in and afterender not called.
        Console.WriteLine("__SURVEY:AfterRender");
        base.OnAfterRender(firstRender);
    }
}


